<UserControl x:Class="Tester.Views.ProblemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <ContentControl Content="{Binding State}" />
            <TextBlock Text="{Binding Name}" />
            <TextBlock Text="{Binding StatusText}" Margin="10,0,10,0" HorizontalAlignment="Right" />
        </StackPanel>
        <ItemsControl ItemsSource="{Binding Tests}" Margin="10,0,0,0" />
    </StackPanel>
</UserControl>
